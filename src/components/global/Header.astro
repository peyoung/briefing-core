---
import Nav from '@components/navigation/NavGlobal.astro';

import { Image } from 'astro:assets';
import Logo from '@images/logo-briefing_01.svg';
---

<header class="g-mrgStyle_01">
  <div class="inner">
    <div class="col-logo">
      <a href="/">
        <Image src={Logo} alt="BRIEFING" width={144} densities={[1, 2, 3]} loading="eager" />
      </a>
    </div>
    <!-- /.col-logo -->
    <div class="col-nav">
      <nav>
        <ul class="globalNav">
          <Nav />
        </ul>
        <!-- /.globalNav -->
      </nav>
    </div>
    <!-- /.col-nav -->
  </div>
  <!-- /.inner -->
  <div class="menuBtn">
    <button type="button" class="g-btnStyle_02" id="menuBtn">
      <span class="labelTx is-normal">MENU</span>
      <span class="labelTx is-open">CLOSE</span>
    </button>
  </div>
  <!-- /.menuBtn -->
</header>

<style lang="scss">
  @use 'sass:math';
  @use 'src/styles/global' as *;
  @use 'src/styles/utils' as *;
  ////////////////////
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 1000;
    pointer-events: none;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.4s;
    &.is-active {
      opacity: 1;
      :global(a),
      :global(button) {
        pointer-events: all;
      }
    }
    > .inner {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      transition: opacity 0.3s;
      :global(.menuOpen) & {
        opacity: 0;
        pointer-events: none;
      }
    }
  }
  ////////////////////
  .col-logo {
    img {
      @include imgset;
      width: 144px;
    }
  }
  ////////////////////
  .menuBtn {
    position: absolute;
    top: 26px;
    @include fz_vwpcmin(14);
    @include vwpxpc(right, 50);
    span {
      display: block;
    }
    .is-normal {
      :global(.menuOpen) & {
        display: none;
      }
    }
    .is-open {
      display: none;
      :global(.menuOpen) & {
        display: block;
      }
    }
  }
  ////////////////////
  @media screen and (min-width: $break-point-middle) {
  }
</style>
<style lang="scss" is:global>
  @use 'sass:math';
  @use 'src/styles/global' as *;
  @use 'src/styles/utils' as *;
  ////////////////////
  .globalNav {
    display: flex;
    // font-size: 1.2rem;
    line-height: normal;
    letter-spacing: math.div(-0.24, 12) + em;
    text-transform: uppercase;
    gap: math.div(49, 12) + em;
    counter-reset: number 0;
    @include fz_vwpcmin(12);
    span {
      font-weight: 700;
    }
    .num {
      counter-increment: number 1;
      &::before {
        content: '0' counter(number);
      }
    }
    a {
      display: flex;
      gap: 0.5em;
      opacity: 0.4;
    }
  }
  ////////////////////
  @media screen and (min-width: $break-point-middle) {
  }
</style>
