---
// const { pageClass } = Astro.props;
import Nav from '@components/navigation/NavGlobal.astro';
// import Bnr from '@components/modules/BnrEc.astro';
// const linkPrefix = pageClass === 'home' ? '' : '/';
---

<div id="menuPanel" data-lenis-prevent-wheel>
  <div class="menuSection">
    <div class="menuContent">
      <div class="inner">
        <div class="closeArea js-menu-close"></div>
        <!-- /.closeArea -->
        <nav>
          <ul class="globalMenu">
            <Nav />
          </ul>
          <!-- /.globalMenu -->
        </nav>
      </div>
      <!-- /.inner -->
    </div>
    <!-- /.menuContent -->
  </div>
  <!-- /.menuSection -->
</div>
<!-- /#menuPanel -->

<style lang="scss" is:global>
  @use 'sass:math';
  @use 'src/styles/global' as *;
  @use 'src/styles/utils' as *;
  ////////////////////
  #menuPanel {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100dvh;
    overflow: auto;
    overscroll-behavior-y: contain;
    /*スクロールバー非表示（IE・Edge）*/
    -ms-overflow-style: none;
    /*スクロールバー非表示（Firefox）*/
    scrollbar-width: none;
    opacity: 0;
    pointer-events: none;
    .menuOpen & {
      opacity: 1;
      pointer-events: all;
    }
  }
  ////////////////////
  .closeArea {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 100%;
  }
  ////////////////////
  .menuSection {
    overflow: hidden;
    width: 100%;
    position: relative;
    min-height: calc(100dvh + 1px);
    clip-path: polygon(50% 50%, 50% 50%, 50% 50%, 50% 50%);
    transition: clip-path 0.2s $ease-out-quad;
    backdrop-filter: blur(10px) saturate(100%);
    background-color: rgba(0, 0, 0, 0.5);
    .menuStart & {
      clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
    }
  }
  ////////////////////
  .menuContent {
    min-height: 100dvh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  ////////////////////
  .globalMenu {
    position: relative;
    text-align: center;
    line-height: math.div(62, 24) + em;
    letter-spacing: math.div(-0.48, 24) + em;
    text-transform: uppercase;
    display: flex;
    flex-direction: column;
    align-items: center;
    @include fz_vwpcmin(24);
    a {
      display: flex;
      pointer-events: all;
      @media (any-hover: hover) {
        &:hover {
          transform: translateX(2px);
          color: $key-color1;
        }
      }
    }
    .labelTx {
      font-weight: 700;
    }
  }
  ////////////////////
  @media screen and (min-width: $break-point-middle) {
  }
</style>
