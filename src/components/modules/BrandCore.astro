---
import Picture from '@components/util/ImgComponent_01.astro';
// import { Image } from 'astro:assets';
import Img_1 from '@images/img_02.jpg';
// import Img_2 from '@images/img_03.jpg';
import Img_1Sp from '@images/img_02_sp.jpg';
import Img_2Sp from '@images/img_03_sp.jpg';
---

<section class="mainSection g-mainSection js-toggleClass" id="brandCore">
  <div class="scene">
    <div class="inner">
      <div class="bgImg">
        <figure>
          <Picture pc={Img_1} sp={Img_1Sp} alt="" loading="eager" />
        </figure>
        <figure>
          <Picture pc={Img_1} sp={Img_2Sp} alt="" loading="eager" />
        </figure>
      </div>
      <!-- /.bgImg -->
      <div class="content g-mrgStyle_02">
        <div class="inner">
          <h2 class="pageRead g-ttlStyle_01 style_01">
            <span class="style_01">BRIEFINGは、</span>
            <span class="style_01">誰のためにあるのか？</span>
            <span class="style_02">何をもたらすのか？</span>
          </h2>
          <!-- /.pageRead -->
          <p class="pageTtl g-ttlStyle_02 style_02">
            <span>WHY</span>
            <span>WE</span>
            <span>EXIST</span>
          </p>
          <!-- /.pageTtl -->
          <p class="pageTtl g-ttlStyle_02 style_01">
            <span>WHY</span>
            <span>WE</span>
            <span>EXIST</span>
          </p>
          <!-- /.pageTtl -->
        </div>
        <!-- /.inner -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.inner -->
  </div>
  <!-- /.scene -->
  <div class="scene style_02 stay"></div>
  <!-- /.scene -->
</section>
<!-- /.mainSection -->

<style lang="scss">
  @use 'sass:math';
  @use 'src/styles/global' as *;
  @use 'src/styles/utils' as *;
  ////////////////////
  // @media screen and (min-height: $breakH + 1px) {
  .scene {
    height: 200vh;
    @media screen and (max-width: $break-point-middle-sp) {
      height: 100vh;
    }
  }
  // }
  ////////////////////
  @media screen and (max-width: $break-point-middle-sp) {
    .content {
      align-items: flex-start;
      padding-top: get_sp($grid_01);
      > .inner {
        position: relative;
      }
    }
  }
  ////////////////////
  $speed_1: 1s;
  .bgImg {
    figure:nth-child(2) {
      transition: filter $speed_1;
      :global(.is-scene_02) & {
        filter: brightness(0.5);
      }
    }
  }
  ////////////////////
  @media screen and (max-width: $break-point-middle-sp) {
    .pageRead {
      transition: 0.3s;
      opacity: 0;
      :global(.is-scene_02) & {
        opacity: 1;
      }
    }
  }
  ////////////////////
  .pageTtl {
    &.style_02 {
      display: none;
    }
  }
  @media screen and (max-width: $break-point-middle-sp) {
    .pageTtl {
      transition: 0.3s;
      :global(.is-scene_02) & {
        @include fz_vw(40);
      }
      &.style_01 {
        position: absolute;
        top: 0;
        left: 0;
        :global(.is-scene_02) & {
          opacity: 0;
        }
      }
      &.style_02 {
        display: block;
        opacity: 0;
        // margin-top: -70 * 3 + em;
        :global(.is-scene_02) & {
          opacity: 1;
        }
        > span {
          display: inline;
        }
      }
    }
  }
  ////////////////////
  @media screen and (min-width: $break-point-middle) {
  }
</style>
